record(ai,"$(P):trace:ymax"){
    field(SCAN,"1 second")
	field(EGU,"Volts")
	field(DTYP,"stream")
	field(EGU,"Volts")
    field(INP,"@teensydiode.proto DAQ_DiodeTraceYmaxQ $(BUS)")

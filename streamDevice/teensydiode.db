record(aai,"$(P):trace:yarr"){
    field(SCAN,".1 second")
	field(DTYP,"stream")
	field(EGU,"ADC units")
	field(NELM,100)
    field(FTVL,"USHORT")
    field(INP,"@teensydiode.proto DAQ_DiodeTraceYarrayQ $(BUS)")
}
